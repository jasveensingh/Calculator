<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    
    <GridLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="5"
                android:columnCount="4">

        <!-- first row-->
        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_row="0"
                android:layout_column="0"
                android:text="CLR"
                android:layout_columnWeight="1"
                android:id="@+id/clear_btn"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_row="0"
                android:layout_column="1"
                android:text="("
                android:layout_columnWeight="1"
                android:id="@+id/left_parenthesis_btn"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_row="0"
                android:layout_column="2"
                android:text=")"
                android:layout_columnWeight="1"
                android:id="@+id/right_parenthesis_btn"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/darkGray"
                android:layout_row="0"
                android:layout_column="3"
                android:text="/"
                android:layout_columnWeight="1"
                android:id="@+id/division_btn"/>

        <!-- second row -->
        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_row="1"
                android:layout_column="0"
                android:text="7"
                android:layout_columnWeight="1"
                android:id="@+id/numeral_seven_btn"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_row="1"
                android:layout_column="1"
                android:text="8"
                android:layout_columnWeight="1"
                android:id="@+id/numeral_eight_btn"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_row="1"
                android:layout_column="2"
                android:text="9"
                android:layout_columnWeight="1"
                android:id="@+id/numeral_nine_btn"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/darkGray"
                android:layout_row="1"
                android:layout_column="3"
                android:text="x"
                android:layout_columnWeight="1"
                android:id="@+id/multiply_btn"/>

        <!-- third row -->
        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_row="2"
                android:layout_column="0"
                android:text="4"
                android:layout_columnWeight="1"
                android:id="@+id/numeral_four_btn"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_row="2"
                android:layout_column="1"
                android:text="5"
                android:layout_columnWeight="1"
                android:id="@+id/numeral_five_btn"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_row="2"
                android:layout_column="2"
                android:text="6"
                android:layout_columnWeight="1"
                android:id="@+id/numeral_six_btn"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/darkGray"
                android:layout_row="2"
                android:layout_column="3"
                android:text="-"
                android:layout_columnWeight="1"
                android:id="@+id/subtraction_btn"/>

        <!-- fourth row -->
        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_row="3"
                android:layout_column="0"
                android:text="1"
                android:layout_columnWeight="1"
                android:id="@+id/numeral_one_btn"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_row="3"
                android:layout_column="1"
                android:text="2"
                android:layout_columnWeight="1"
                android:id="@+id/numeral_two_btn"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_row="3"
                android:layout_column="2"
                android:text="3"
                android:layout_columnWeight="1"
                android:id="@+id/numeral_three_btn"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/darkGray"
                android:layout_row="3"
                android:layout_column="3"
                android:text="+"
                android:layout_columnWeight="1"
                android:id="@+id/addition_btn"/>

        <!-- fifth row -->
        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_row="4"
                android:layout_column="0"
                android:text="0"
                android:layout_columnWeight="1"
                android:id="@+id/numeral_zero_btn"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_row="4"
                android:layout_column="1"
                android:text="."
                android:layout_columnWeight="1"
                android:id="@+id/decimal_btn"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_row="4"
                android:layout_column="2"
                android:text="%"
                android:layout_columnWeight="1"
                android:id="@+id/percent_btn"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@color/red"
                android:layout_row="4"
                android:layout_column="3"
                android:text="="
                android:layout_columnWeight="1"
                android:id="@+id/equal_btn"/>

    </GridLayout>

</RelativeLayout>